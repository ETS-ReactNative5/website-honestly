    <style>
      .accessibilityDay {
        filter: grayscale(100%);
        -webkit-filter: grayscale(100%);
        -moz-filter: grayscale(100%);
        -ms-filter: grayscale(100%);
        -o-filter: grayscale(100%);
      }

      .accessibilityBar {
        width: 100%;
        padding: 20px;
        background-color: #22d59b;
        text-align: center;
      }

      .accessibilityBar button {
        display: none;
        font-family: 'ProximaNova-Bold', sans-serif;
        font-weight: 800px;
        font-size: 16px;
        padding: 0 10px;
        min-width: 200px;
        height: 40px;
        background-color: #212121;
        color: #f8f8f8;
        border: none;
        margin: 0 auto 20px;
      }

      .accessibilityBar button:hover {
        background-color: #606060;
      }

      .accessibilityBar p {
        font-family: 'ProximaNova-Bold', sans-serif;
        font-weight: 800px;
        display: block;
      }

      @media screen and (min-width: 690px) {
        .accessibilityBar {
          text-align: left;
          position: fixed;
          z-index: 9999;
          top: 0;
          display: flex;
          align-items: center;
        }

        .accessibilityBar button {
          margin: 0 20px 0 0;
        }

        .js-app {
          padding-top: 80px;
        }
      }
    </style>
    <script>
      var colourOnButtonText = 'Make my day accessible';
      var colourOffButtonText = 'Switch back to colour';

      function initialiseAccessibilityBar() {
        document.getElementById('accessibilityDayButton').style.display = 'block';

        if (!!window.MSInputMethodContext && !!document.documentMode) {
          var description = document.getElementById('accessibilityDayDescription');
          var message = description.textContent;
          description.innerHTML = message.concat(' (We\'re sorry, but this feature is not supported in your browser)')
        }
      }

      function toggleGreyscale() {
        document.documentElement.classList.toggle('accessibilityDay');

        var button = document.getElementById('accessibilityDayButton');
        if (button.innerHTML == colourOffButtonText) {
          button.innerHTML = colourOnButtonText;
        } else {
          button.innerHTML = colourOffButtonText;
        }
      }
    </script>
  </head>
  <body onload="initialiseAccessibilityBar()">
    <div class="accessibilityBar">
      <button id="accessibilityDayButton" onClick="toggleGreyscale()">Switch back to colour</button>
      <p id="accessibilityDayDescription">What’s black and white and read all over? Us. We’re greyscale to promote Global Accessibility Awareness Day.</p>
    </div>
    <div class="js-app">
      <% if (typeof bodyContent !== 'undefined') { %><%= bodyContent %><% } %>
    </div>
    <input id="state" type="hidden" value="<%= typeof state !== 'undefined' ? state : '{}' %>">
    <% if (typeof jsPath !== 'undefined') { %><script type="text/javascript" src="<%= jsPath %>"></script><% } %>
  </body>
